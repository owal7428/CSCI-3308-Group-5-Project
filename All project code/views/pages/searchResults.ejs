    <%- include ('../partials/menu') %>

        <main>
            <div class="container">
                <!--  -->
                <h1>Search Results</h1>

                <div class="container">
                    <%- include ('../partials/message.ejs') %>
                </div>

                <div class="container">
                    <% if (data.weather.data !== -1) { %>
                        <% if (data.weather.format==="json" ) { %>
                            <p> <%= JSON.stringify(data.weather.data) %> </p>
                        <% } %>
                        <% if (data.weather.format==="html" ) { %>
                            <%- data.weather.data %>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </main>

